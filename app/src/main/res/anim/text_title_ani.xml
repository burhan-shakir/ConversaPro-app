<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">


    <alpha
        android:fromAlpha="0"
        android:toAlpha="1"
        android:duration="2000"
        />

    <scale
        android:fromXScale="0.7"
        android:fromYScale="0.7"
        android:toXScale="1"
        android:toYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="2000"

        />
    <translate
        android:fromXDelta="0"
        android:fromYDelta="200"
        android:toXDelta="0"
        android:toYDelta="0"
        android:duration="2000"

        />

</set>